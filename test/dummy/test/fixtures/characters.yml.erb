<%
  stripper = Proc.new{|string| string.strip.downcase.gsub(/[^\w\s]/,'').gsub(/\s+/,'_')}

  Movie.all.each do |mv|
    title = stripper.call(mv.title)
    instance_variable_set("@#{title}", mv.id)
  end

  Actor.all.each do |act|
    name = stripper.call(act.name)
    instance_variable_set("@#{name}", act.id)
  end
%>
